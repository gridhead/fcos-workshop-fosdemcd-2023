---
variant: fcos
version: 1.4.0
storage:
  links:
    - path: /etc/localtime
      target: /usr/share/zoneinfo/Asia/Kolkata
  files:
    - path: /etc/hostname
      mode: 0644
      contents:
        source: https://github.com/t0xic0der/fcos-workshop-fosdemcd-2023/raw/fcosmine/root/etc/hostname
    - path: /etc/systemd/zram-generator.conf
      mode: 0644
      contents:
        source: https://github.com/t0xic0der/fcos-workshop-fosdemcd-2023/raw/fcosmine/root/etc/systemd/zram-generator.conf
    - path: /etc/firewalld/services/fcosmine.xml
      mode: 0644
      contents:
        source: https://github.com/t0xic0der/fcos-workshop-fosdemcd-2023/raw/fcosmine/root/etc/firewalld/services/fcosmine.xml
    - path: /home/fcosmine/compconf/fcosmine.yml
      mode: 0644
      contents:
        source: https://github.com/t0xic0der/fcos-workshop-fosdemcd-2023/raw/fcosmine/compconf/fcosmine.yml
    - path: /home/fcosmine/fosdemcd/data/ops.json
      mode: 0644
      contents:
        source: https://github.com/t0xic0der/fcos-workshop-fosdemcd-2023/raw/fcosmine/root/home/fcosmine/fosdemcd/data/ops.json
    - path: /etc/systemd/system/install-podman-compose-and-firewalld.service
      mode: 0644
      contents:
        source: https://github.com/t0xic0der/fcos-workshop-fosdemcd-2023/raw/fcosmine/root/etc/systemd/system/install-podman-compose-and-firewalld.service
    - path: /etc/systemd/system/allow-minecraft-and-openssh-through-firewall.service
      mode: 0644
      contents:
        source: https://github.com/t0xic0der/fcos-workshop-fosdemcd-2023/raw/fcosmine/root/etc/systemd/system/allow-minecraft-and-openssh-through-firewall.service
    - path: /etc/systemd/system/start-minecraft-dedicated-server.service
      mode: 0644
      contents:
        source: https://github.com/t0xic0der/fcos-workshop-fosdemcd-2023/raw/fcosmine/root/etc/systemd/system/start-minecraft-dedicated-server.service
systemd:
  units:
    - name: install-podman-compose-and-firewalld.service
      enabled: true
    - name: firewalld.service
      enabled: true
    - name: allow-minecraft-and-openssh-through-firewall.service
      enabled: true
    - name: start-minecraft-dedicated-server.service
      enabled: true
passwd:
  users:
    - name: fcosmine
      home_dir: /home/fcosmine
      shell: /bin/bash
      groups:
        - wheel
      ssh_authorized_keys:
        - ssh-rsa  t0xic0der@W10P-STARDRAGON
